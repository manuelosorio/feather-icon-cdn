{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
  },
  "include": [
    "cypress/tsconfig.json",
    "src/**/*.ts",
    "src/views/template/**/*.{html,pug}"
  ],
  "exclude": [
    "dist"
  ]
}
